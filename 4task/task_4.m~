close all;
clear all;

A = imread('./cameraman.tif');

% shifted spectrum
f = fft2(double(A));
I1 = ifft2(fftshift(f));

% function g
g = f;
g(1:2:256, 1:2:256) = -1 * g(1:256:2, 1:256:2);

subplot(2, 2, 1), imshow(A, []), title("Original");
subplot(2, 2, 2), imshow(I1, []), title("Shiffted");
subplot(2, 2, 2), imshow(I1, []), title("Shiffted");